<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kenti.kaktia.com.kenti">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!--Obtener cuentas del dispositivo-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!--Leer perfil de cuenta de usuario-->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <!--Leer contactos-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--Acceso a internet-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InicioActivity"
            android:label="@string/title_activity_inicio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CombinarActivity"
            android:label="@string/title_activity_combinar"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FiltrosActivity"
            android:label="@string/filtros"></activity>
        <activity
            android:name=".RegistroActivity"
            android:label="@string/registrar"
            android:theme="@style/AppTheme" />
        <activity android:name=".DescripcionActivity"></activity>
    </application>

</manifest>